<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtLinhaId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="2"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txtLinhaDisciplina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Desenvolvimento Java"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLinhaAssunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="POO 2"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtLinhaDataSolicitacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="23/02/2019" />

    <TextView
        android:id="@+id/txtLinhaHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="13:00h" />


    <TextView
        android:id="@+id/txtLinhaDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Muitas duvidas no desenvolvimento de web site responsivos com JDBC" />

    <TextView
        android:id="@+id/txtLinhaLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Rua Octavio Barreto"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLinhaAlterarAula"
        android:text="Alterar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLinhaExcluirAula"
        android:text="Excluir"/>


</LinearLayout>